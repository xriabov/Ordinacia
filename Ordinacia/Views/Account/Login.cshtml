@model Ordinacia.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
}

<div class="d-flex flex-row justify-content-center align-items-center" style="height: 100%">
    <div class="col-3">
        <div class="card">
            <article class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Username:</label>
                        @Html.TextBoxFor(x => x.Username, new {@class = "form-control", placeholder = "Username"})
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        @Html.TextBoxFor(y => y.Password, new {@class = "form-control", placeholder = "********", type = "password"})
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label> @Html.CheckBoxFor(x => x.Remember.Value) Remember me</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                }
            </article>
        </div>
    </div>
</div>